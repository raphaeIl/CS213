        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/order_food_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/main_menu_chicago_style"
                />

            <TextView
                android:id="@+id/order_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicago Style Pizza"
                android:layout_below="@id/order_food_image"
                />

            <TextView
                android:id="@+id/order_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_food_name"
                android:text="$99.99"
                />

            <TextView
                android:id="@+id/order_food_flavor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Flavors"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_below="@id/order_food_price"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/order_food_flavor_text"
                />

